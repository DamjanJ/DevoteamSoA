<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/frameLayout2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_devobutton"
                        android:text="1"
                        android:textColor="@color/colorWhite"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintRight_toLeftOf="@+id/button2"
                        android:layout_marginRight="8dp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_devobutton"
                        android:textColor="@color/colorWhite"
                        android:text="2"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/button1"
                        android:layout_marginBottom="0dp"
                        app:layout_constraintHorizontal_bias="0.502"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_devobutton"
                        android:textColor="@color/colorWhite"
                        android:text="3"
                        android:layout_marginRight="8dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/button2"
                        android:layout_marginTop="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/button2"
                        android:layout_marginBottom="0dp"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintLeft_toRightOf="@+id/button2"
                        android:layout_marginLeft="8dp" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_devobutton"
                        android:text="4"
                        android:textColor="@color/colorWhite"
                        app:layout_constraintTop_toTopOf="@+id/button5"
                        android:layout_marginTop="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/button5"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/button5"
                        android:layout_marginRight="8dp" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_devobutton"
                        android:text="5"
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="8dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/btn_devobutton"
                        android:text="6"
                        android:textColor="@color/colorWhite"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/button5"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/button5"
                        android:layout_marginBottom="0dp"
                        app:layout_constraintTop_toTopOf="@+id/button5"
                        android:layout_marginTop="0dp"
                        app:layout_constraintHorizontal_bias="0.523" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_devobutton"
                        android:textColor="@color/colorWhite"
                        android:text="7"
                        app:layout_constraintRight_toLeftOf="@+id/button8"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/button8"
                        android:layout_marginBottom="0dp"
                        app:layout_constraintTop_toTopOf="@+id/button8"
                        android:layout_marginTop="0dp" />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_devobutton"
                        android:textColor="@color/colorWhite"
                        android:text="8"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_devobutton"
                        android:textColor="@color/colorWhite"
                        android:text="9"
                        android:layout_marginRight="8dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/button8"
                        android:layout_marginTop="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/button8"
                        android:layout_marginBottom="0dp" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <Button
                        android:id="@+id/buttonC"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_devobutton"
                        android:textColor="@color/colorWhite"
                        android:text="C"
                        app:layout_constraintBottom_toBottomOf="@+id/button0"
                        android:layout_marginBottom="0dp"
                        app:layout_constraintRight_toLeftOf="@+id/button0"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/button0"
                        android:layout_marginTop="0dp"
                        app:layout_constraintHorizontal_bias="0.0" />

                    <Button
                        android:id="@+id/button0"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_devobutton"
                        android:textColor="@color/colorWhite"
                        android:text="0"
                        android:layout_marginRight="8dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/buttonDot"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_devobutton"
                        android:textColor="@color/colorWhite"
                        android:text="."
                        android:layout_marginRight="8dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/button0"
                        android:layout_marginTop="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/button0"
                        android:layout_marginBottom="0dp"
                        app:layout_constraintLeft_toRightOf="@+id/button0"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintHorizontal_bias="0.0" />
                </android.support.constraint.ConstraintLayout>

                <CheckBox
                    android:id="@+id/negativeValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Negative Value"
                    android:visibility="gone" />

            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/promptValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="****"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/frameLayout2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/promptText"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/promptText"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Select Question Number"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>
