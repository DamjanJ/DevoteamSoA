<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"

        android:background="#e1e1e1"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="#e1e1e1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintVertical_bias="0.0">

            <Button
                android:id="@+id/btn_start_quiz"
                android:layout_width="180dp"
                android:layout_height="50dp"

                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="Start Quiz"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_questions" />

            <Button
                android:id="@+id/btn_statistics"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:text="Statistics"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/btn_questions"
                app:layout_constraintRight_toRightOf="@+id/btn_questions"
                app:layout_constraintTop_toBottomOf="@+id/btn_questions" />

            <Button
                android:id="@+id/btn_questions"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:text="Questions"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/btn_start_quiz"
                app:layout_constraintRight_toRightOf="@+id/btn_start_quiz"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.498" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_start_quiz"
                app:layout_constraintRight_toLeftOf="@+id/btn_start_quiz"
                app:layout_constraintTop_toTopOf="@+id/btn_start_quiz"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_trophy"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_questions"
                app:layout_constraintRight_toLeftOf="@+id/btn_questions"
                app:layout_constraintTop_toTopOf="@+id/btn_questions"
                app:layout_constraintVertical_bias="0.222"
                app:srcCompat="@drawable/ic_question2"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_statistics"
                app:layout_constraintRight_toLeftOf="@+id/btn_statistics"
                app:layout_constraintTop_toTopOf="@+id/btn_statistics"
                app:srcCompat="@drawable/ic_analytics2"
                android:layout_marginEnd="8dp" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:background="@drawable/devobanner"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>